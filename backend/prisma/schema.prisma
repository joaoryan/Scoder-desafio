generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model products {
  id               Int     @id @default(autoincrement())
  name             String
  category         String
  price            Decimal @db.Decimal(10, 2)
  description      String?               
  sales            Int     @default(0)        
  stock            Int     @default(0)       
  creationDate     DateTime @default(now())
  lastupdateDate   DateTime @updatedAt
}
